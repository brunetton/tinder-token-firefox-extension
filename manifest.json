{
    "description": "Copy Facebook OAuth access token to clipboard",
    "manifest_version": 2,
    "name": "tinder-token-extension",
    "version": "1.2",

    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "https://*.facebook.com/v2*/dialog/oauth/confirm/",
      "clipboardWrite",
      "storage"
    ],

    "background": {
      "scripts": ["background.js"]
    },

    "options_ui": {
      "page": "options.html"
    },

    "applications": {
      "gecko": {
        "id": "tinder-token-extension@brunetton.com"
      }
    }

  }