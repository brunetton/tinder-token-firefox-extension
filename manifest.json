{
    "description": "Copy Facebook OAuth access token to clipboard",
    "manifest_version": 2,
    "name": "tinder-token-firefox-extension",
    "version": "1.0",

    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "https://www.facebook.com/v2.10/dialog/oauth/confirm/",
      "clipboardWrite"
    ],

    "background": {
      "scripts": ["background.js"]
    }
  }